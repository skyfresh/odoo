<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="sf_fileopening.list">
            <field name="name">File Openings</field>
            <field name="model">fileopening</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree decoration-success="client_paid == True">
                    <field name="lot" />
                    <field name="pol" />
                    <field name="pod" />
                    <field name="etd" />
                    <field name="eta" />
                    <field name="delivery_date" />
                    <field name="product" />
                    <field name="op_agent" />
                    <field name="sale_agent" />
                    <field name="client_paid" />
                </tree>
            </field>
        </record>


        <record id="fileopening_search_view" model="ir.ui.view">
            <field name="name">Fileopening Search View</field>
            <field name="model">fileopening</field>
            <field name="arch" type="xml">
                <search string="Search Fileopening">
                    <field name="lot" modifiers="{ 'readonly': True}"/>
                    <field name="po_client" modifiers="{ 'readonly': True}"/>
                    <field name="customs_ima_number" modifiers="{ 'readonly': True}"/>
                    <field name="container_number" modifiers="{ 'readonly': True}"/>
                    <field name="seal_number" modifiers="{ 'readonly': True}"/>
                    <filter string="Air" name="air" domain="[('freight_type','=','air')]"
                            help="By Air"/>
                    <filter string="Sea" name="sea" domain="[('freight_type','=','sea')]"
                            help="By Sea"/>
                </search>
            </field>
        </record>


        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="sf_fileopening.action_window">
            <field name="name">File Opening</field>
            <field name="res_model">fileopening</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="sf_fileopening.form">
            <field name="name">File Opening</field>
            <field name="model">fileopening</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="File Opening">
                    <sheet>
                        <group col="2">
                            <group>
                                <field name="freight_type" required="1"/>
                                <field name="sequence" on_change="1" attrs="{'invisible': True}"/>
                                <field name="lot" modifiers="{&quot;readonly&quot;: true}"/>
                                <field name="po_client" />
                                <field name="imp_exp" on_change="1" required="1" />
                                <field name="customs_type" modifiers="{}"/>
                                <field name="customs_ima_number" modifiers="{}" attrs="{'invisible':[('customs_type', '!=', 'ima')]}"/>
                                <field name="mawb" modifiers="{}"/>
                                <field name="hawb" modifiers="{}"/>
                                <field name="pol" modifiers="{}"/>
                                <field name="pod" modifiers="{}"/>
                                <field name="stop" modifiers="{}"/>
                                <field name="flight" modifiers="{}"/>
                                <field name="airline" modifiers="{}"/>
                                <field name="container_type" modifiers="{}" attrs="{'invisible':[('freight_type', '!=', 'sea')]}"/>
                                <field name="container_number" modifiers="{}" attrs="{'invisible':[('freight_type', '!=', 'sea')]}"/>
                                <field name="seal_number" modifiers="{}" attrs="{'invisible':[('freight_type', '!=', 'sea')]}"/>
                                <field name="etd" modifiers="{}"/>
                                <field name="eta" modifiers="{}"/>
                                <field name="delivery_date" modifiers="{}"/>
                                <field name="total_received"/>
                                <field name="total_paid"/>
                                <field name="margin"/>
                                <field name="invoice_total"/>
                                <field name="bill_total"/>
                                <field name="theorical_margin"/>
                            </group>
                            <group>
                                <field name="consignee" can_create="false" can_write="true" modifiers="{}" options="{'no_create': True}" domain="[('is_consignee','=', True)]" />
                                <field name="consignee_text" />
                                <field name="shipper" can_create="false" can_write="true" modifiers="{}" options="{'no_create': True}" domain="[('is_shipper','=', True)]" />
                                <field name="shipper_text" />
                                <field name="notify" can_create="false" can_write="true" modifiers="{}" options="{'no_create': True}" domain="[('is_notify','=', True)]" />
                                <field name="notify_text" />
                                <field name="incoterm" can_create="false" can_write="true" modifiers="{}" options="{'no_create': True}" />
                                <field name="op_agent" can_create="false" can_write="true" modifiers="{}" options="{'no_create': True}" domain="[('is_op_agent','=', True)]" />
                                <field name="op_agent_text" />
                                <field name="sale_agent" can_create="false" can_write="true" modifiers="{}" options="{'no_create': True}" domain="[('is_sale_agent','=', True)]" />
                                <field name="sale_agent_text" />
                                <field name="phyto" modifiers="{}"/>
                                <field name="truck" modifiers="{}"/>
                                <field name="currency" can_create="false" can_write="true" modifiers="{}" options="{'no_create': True}" />
                                <field name="exchange_rate" modifiers="{}"/>
                                <field name="palettized" modifiers="{}"/>
                                <field name="box_amount" modifiers="{}"/>
                                <field name="palette_amount" modifiers="{}"/>
                                <field name="weight_gross" modifiers="{}"/>
                                <field name="weight_net" modifiers="{}"/>
                                <field name="weight_chargeable" modifiers="{}"/>
                                <field name="cbm" modifiers="{}"/>
                                <field name="product" modifiers="{}"/>
                                <field name="brand" modifiers="{}"/>
                                <field name="qc" modifiers="{}"/>
                                <field name="temperature_required" modifiers="{}"/>
                                <field name="af" />
                                <field name="remarks" colspan="4" modifiers="{}"/>
                            </group>
                        </group>
                        <notebook name="notebook_Y5odK">
                            <page name="page_invoice" string="Invoices">
                                <group>
                                    <field name="sales" nolabel="1"/>
                                </group>
                                <group>
                                    <field name="sales_text" nolabel="1"/>
                                </group>
                            </page>
                            <page name="page_bills" string="Bills">
                                <group>
                                    <field name="bills" nolabel="1"/>
                                </group>
                                <group>
                                    <field name="bills_text" nolabel="1"/>
                                </group>
                            </page>
                            <page name="page_commissions" string="Commissions">
                                <group>
                                    <group>
                                        <field name="theorical_commission"/>
                                        <field name="commission_paid"/>
                                    </group>
                                    <group>
                                        <field name="theorical_margin_after_commission" />
                                        <field name="margin_after_commission" />
                                    </group>
                                    <field name="commissions" nolabel="1"/>
                                    <field name="commissions_text" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="customer_code" />
                    <field name="is_consignee"/>
                    <field name="is_notify"/>
                    <field name="is_shipper"/>
                    <field name="is_op_agent"/>
                    <field name="is_sale_agent"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_move_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_reference']" position="after">
                    <field name="sale_order" />
                    <field name="lot"/>
                </xpath>
            </field>
        </record>

        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">view_order_form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="lot" required='1' />
                    <field name="ref1"/>
                    <field name="delivery_date"/>
                    <field name="pickup_date"/>
                </xpath>
                <xpath expr="//page[@name='order_lines']" position="attributes">
                    <attribute name="string">Selling</attribute>
                </xpath>
                <xpath expr="//page[@name='order_lines']" position="after">
                    <page name="studio_page_qxXo5" string="Buying">
                        <button name="create_bill" string="Create Bill" type="object"/><br/>
                        <field name="bills" nolabel="1" options="{'no_open': True}" readonly="True">
                            <tree string="Bills" decoration-info="state == 'draft'" readonly="True">
                                <button name="open_bill_form" type="object" string="Edit" />
                                <field name="name" decoration-bf="1"/>
                                <field name="partner_id" invisible="1"/>
                                <field name="invoice_source_email" invisible="1"/>
                                <field name="invoice_partner_display_name" string="Partner"/>
                                <field name="invoice_date" optional="show" invisible="context.get('default_move_type') not in ('in_invoice', 'in_refund','in_receipt')" string="Bill Date"/>
                                <field name="invoice_date" optional="show" invisible="context.get('default_move_type') not in ('out_invoice', 'out_refund','out_receipt')" string="Invoice Date"/>
                                <field name="date" optional="hide" invisible="context.get('default_move_type') in ('out_invoice', 'out_refund', 'out_receipt')" string="Accounting Date"/>
                                <field name="invoice_date_due" widget="remaining_days" optional="show" attrs="{'invisible': [['payment_state', 'in', ('paid', 'in_payment', 'reversed')]]}"/>
                                <field name="invoice_origin" optional="hide" string="Source Document"/>
                                <field name="payment_reference" optional="hide" invisible="context.get('default_move_type') in ('out_invoice', 'out_refund','out_receipt')"/>
                                <field name="ref" optional="hide"/>
                                <field name="invoice_user_id" optional="hide" invisible="context.get('default_move_type') not in ('out_invoice', 'out_refund','out_receipt')" string="Salesperson" widget="many2one_avatar_user"/>
                                <field name="team_id" invisible="context.get('default_move_type') not in ('out_invoice', 'out_refund','out_receipt')" optional="hide"/>
                                <field name="activity_ids" widget="list_activity" optional="show"/>
                                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" optional="hide"/>
                                <field name="amount_untaxed_signed" string="Tax Excluded" sum="Total" optional="show"/>
                                <field name="amount_tax_signed" string="Tax" sum="Total" optional="hide"/>
                                <field name="amount_total_signed" string="Total" sum="Total" decoration-bf="1" optional="show"/>
                                <field name="amount_total_in_currency_signed" string="Total in Currency" groups="base.group_multi_currency" optional="show"/>
                                <field name="amount_residual_signed" string="Amount Due" sum="Amount Due" optional="hide"/>
                                <field name="currency_id" groups="base.group_multi_currency" optional="hide"/>
                                <field name="company_currency_id" invisible="1"/>
                                <field name="to_check" optional="hide" widget="boolean_toggle"/>
                                <field name="payment_state" widget="badge" decoration-danger="payment_state == 'not_paid'" decoration-warning="payment_state in ('partial', 'in_payment')" decoration-success="payment_state in ('paid', 'reversed')" attrs="{'invisible': [('payment_state', 'in', ('invoicing_legacy'))]}" optional="show"/>
                                <field name="state" widget="badge" decoration-success="state == 'posted'" decoration-info="state == 'draft'" optional="show"/>
                                <field name="move_type" invisible="context.get('default_move_type', True)"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

